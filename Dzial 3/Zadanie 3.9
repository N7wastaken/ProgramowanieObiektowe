using System;

class Program
{
    static void Main(string[] args)
    {
        Console.WriteLine("Podaj liczbę wierszy:");

        if (int.TryParse(Console.ReadLine(), out int liczbaWierszy) && liczbaWierszy > 0)
        {
            // Figura a)
            Console.WriteLine("\na)");
            for (int i = 1; i <= liczbaWierszy; i++)
            {
                for (int j = 1; j <= i; j++)
                {
                    Console.Write("*");
                }
                Console.WriteLine();
            }

            // Figura b)
            Console.WriteLine("\nb)");
            for (int i = liczbaWierszy; i >= 1; i--)
            {
                for (int j = 1; j <= i; j++)
                {
                    Console.Write("*");
                }
                Console.WriteLine();
            }

            // Figura c)
            Console.WriteLine("\nc)");
            for (int i = 1; i <= liczbaWierszy; i++)
            {
                for (int j = 1; j <= i; j++)
                {
                    Console.Write("*");
                }
                Console.WriteLine();
            }

            // Figura d)
            Console.WriteLine("\nd)");
            for (int i = 1; i <= liczbaWierszy; i++)
            {
                if (i == 1 || i == liczbaWierszy)
                {
                    for (int j = 1; j <= liczbaWierszy; j++)
                    {
                        Console.Write("*");
                    }
                }
                else
                {
                    Console.Write("*");
                    for (int j = 1; j <= liczbaWierszy - 2; j++)
                    {
                        Console.Write(" ");
                    }
                    Console.Write("*");
                }

                Console.WriteLine();
            }
        }
        else
        {
            Console.WriteLine("Błąd: Podano nieprawidłową liczbę wierszy.");
        }
    }
}
