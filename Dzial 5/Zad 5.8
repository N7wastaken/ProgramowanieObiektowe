using System;

class Program
{
    static void Main()
    {
        Console.Write("Podaj liczbę naturalną x: ");
        if (int.TryParse(Console.ReadLine(), out int x) && x >= 0)
        {
            int sumaCyfr = ObliczSumeCyfr(x);
            Console.WriteLine($"Suma cyfr liczby {x}: {sumaCyfr}");
        }
        else
        {
            Console.WriteLine("Błąd: Podano nieprawidłową liczbę.");
        }
    }

    static int ObliczSumeCyfr(int liczba)
    {
        int suma = 0;

        while (liczba > 0)
        {
            suma += liczba % 10;
            liczba /= 10;
        }

        return suma;
    }
}
