using System;

class Program
{
    static void Main()
    {
        Console.WriteLine("Podaj długość prostokąta:");
        int dlugosc = Convert.ToInt32(Console.ReadLine());

        Console.WriteLine("Podaj szerokość prostokąta:");
        int szerokosc = Convert.ToInt32(Console.ReadLine());

        Console.WriteLine("Podaj znak wypełnienia prostokąta:");
        char znak = Convert.ToChar(Console.ReadLine());

        Console.WriteLine("\nProstokąt \"leżący\":");
        Rysuj(dlugosc, szerokosc, znak);

        Console.WriteLine("\nProstokąt \"stojący\":");
        Rysuj(szerokosc, dlugosc, znak);
    }

    static void Rysuj(int dlugosc, int szerokosc, char znak)
    {
        for (int i = 0; i < szerokosc; i++)
        {
            for (int j = 0; j < dlugosc; j++)
            {
                Console.Write(znak);
            }
            Console.WriteLine();
        }
    }
}
