using System;

class Program
{
    static void Main()
    {
        int[] tablica = { 2, 4, 6, 8, 10 };

        Console.WriteLine("Tablica przed mnożeniem:");
        WyswietlTablice(tablica);

        Console.Write("\nPodaj mnożnik: ");
        int mnoznik = Convert.ToInt32(Console.ReadLine());

        MnozenieTablicy(tablica, mnoznik);

        Console.WriteLine("\nTablica po mnożeniu:");
        WyswietlTablice(tablica);
    }

    static void MnozenieTablicy(int[] tablica, int mnoznik)
    {
        for (int i = 0; i < tablica.Length; i++)
        {
            tablica[i] *= mnoznik;
        }
    }

    static void WyswietlTablice(int[] tablica)
    {
        foreach (var element in tablica)
        {
            Console.Write(element + " ");
        }
        Console.WriteLine();
    }
}
