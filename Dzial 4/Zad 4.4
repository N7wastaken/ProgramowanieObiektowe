using System;

class Program
{
    static void Main()
    {
        Random rand = new Random();
        int[] tablica = new int[100];

        for (int i = 0; i < 100; i++)
        {
            tablica[i] = rand.Next(1, 1000);
        }

        Console.WriteLine("Zawartość tablicy:");
        foreach (var liczba in tablica)
        {
            Console.Write($"{liczba} ");
        }

        int liczbaLiczbPierwszych = 0;
        foreach (var liczba in tablica)
        {
            if (CzyLiczbaPierwsza(liczba))
            {
                liczbaLiczbPierwszych++;
            }
        }

        Console.WriteLine($"\nLiczba liczb pierwszych w tablicy: {liczbaLiczbPierwszych}");
    }

    static bool CzyLiczbaPierwsza(int n)
    {
        if (n < 2)
            return false;

        for (int i = 2; i <= Math.Sqrt(n); i++)
        {
            if (n % i == 0)
                return false;
        }

        return true;
    }
}
